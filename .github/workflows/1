name: Deploy static site with npm

on:
  push:
    branches: ["main"]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20  # 可指定你需要的 Node 版本
          cache: 'npm'      # 缓存 npm 依赖，加速构建

      - name: Install dependencies
        run: npm ci         # 或者 npm install，推荐 ci 用于 CI 环境

      - name: Build
        run: npm run build  # 执行构建命令，生成 dist 文件夹

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist'    # 指定上传的文件夹为构建输出的 dist

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
